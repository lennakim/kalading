<div class="span9 offset2">
  <%= render 'tool_types/nav' %>

  <div class="pull-right">
    <%= render 'tool_batches/new_btn' %>
    <%= link_to t('new'), new_tool_type_path, class: 'btn btn-success' if can? :create, ToolType %>
  </div>
  <div class="clearfix"></div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('mongoid.attributes.tool_type.name') %></th>
        <th><%= t('mongoid.attributes.tool_type.category') %></th>
        <th><%= t('mongoid.attributes.tool_type.unit') %></th>
        <th><%= t('actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @tool_types %>
    </tbody>
  </table>
  <%= paginate @tool_types %>
</div>
