<div class="span10 offset1">
  <%= render 'tool_types/nav' %>

  <h3><%= ToolType.model_name.human %></h3>

  <div>
    <%= link_to t('new'), new_tool_type_path, class: 'btn btn-success pull-right' if can? :create, ToolType %>

    <%= form_tag tool_types_path, class: 'form-inline', method: :get do %>
      <%= select_tag 'category', options_for_select(tool_type_category_collection, params[:category]),
        prompt: t('views.modules.tool_management.all_categories') %>
      <%= submit_tag t('search'), class: 'btn' %>
    <% end -%>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= ToolType.human_attribute_name('identification') %></th>
        <th><%= ToolType.human_attribute_name('category') %></th>
        <th><%= ToolType.human_attribute_name('unit') %></th>
        <th><%= t('actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @tool_types %>
    </tbody>
  </table>
  <%= paginate @tool_types %>
</div>
