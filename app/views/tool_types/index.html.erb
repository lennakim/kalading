<div class="span9 offset2">
  <div class="page-header">
    <h1>
      <%= t('mongoid.models.tool_type') %>
      <%= link_to t('new'), new_tool_type_path, class: 'pull-right btn btn-success' %>
    </h1>
    <div class="clearfix"></div>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('mongoid.attributes.tool_type.name') %></th>
        <th><%= t('mongoid.attributes.tool_type.category') %></th>
        <th><%= t('mongoid.attributes.tool_type.unit') %></th>
        <th><%= t('actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @tool_types %>
    </tbody>
  </table>
</div>
