<%- model_class = Storehouse -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t(:storehouse_name) %></th>
      <th><%= t(:address) %></th>
      <th><%= t(:phone_num) %></th>
      <th><%= t(:created_at) %></th>
      <th><%=t 'actions' %></th>
    </tr>
  </thead>
  <tbody>
    <% @storehouses.each do |storehouse| %>
      <tr>
        <td><%= link_to storehouse.name, storehouse_path(storehouse) %></td>
        <td><%= storehouse.address %></td>
        <td><%= storehouse.phone_num %></td>
        <td><%=l storehouse.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_storehouse_path(storehouse), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      storehouse_path(storehouse),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('new_storehouse'),
            new_storehouse_path,
            :class => 'btn btn-primary' %>
