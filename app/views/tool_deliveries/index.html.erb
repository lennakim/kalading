<div class="span9 offset2">
  <%= render 'tool_types/nav' %>

  <div class="control-group">
    <%= link_to '调货', new_tool_delivery_path, class: 'btn btn-success pull-right' if can? :create, ToolDelivery %>
    <div class="clearfix"></div>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= ToolDelivery.human_attribute_name('created_at') %></th>
        <th><%= ToolDelivery.human_attribute_name('from_city') %></th>
        <th><%= ToolDelivery.human_attribute_name('to_city') %></th>
        <th><%= ToolDelivery.human_attribute_name('deliverer') %></th>
        <th><%= ToolDelivery.human_attribute_name('recipient') %></th>
        <th><%= ToolDelivery.human_attribute_name('received_at') %></th>
        <th><%= ToolDelivery.human_attribute_name('tools_count') %></th>
        <th><%= t('actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @tool_deliveries %>
    </tbody>
  </table>
  <%= paginate @tool_deliveries %>
</div>
