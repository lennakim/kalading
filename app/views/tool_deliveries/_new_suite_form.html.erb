<%= simple_nested_form_for @tool_delivery, url: suite_tool_deliveries_path, html: { class: 'form-horizontal' } do |f| %>
  <%= f.association :to_city, collection: City.all, label_method: :name, prompt: :translate %>

  <table id="tool_suite_deliveries" class="table table-hover">
    <thead>
      <th><%= ToolSuiteDelivery.human_attribute_name('tool_suite') %></th>
      <th><%= ToolSuiteDelivery.human_attribute_name('quantity') %></th>
      <th></th>
    </thead>
    <tbody>
      <%= f.fields_for :tool_suite_deliveries, wrapper: false do |nf| %>
        <tr class="fields">
          <td>
            <%= nf.association :tool_suite, label: false, wrapper: :inline,
              collection: ToolSuite.all, label_method: :name, prompt: :translate %>
          </td>
          <td>
            <%= nf.input :quantity, label: false, wrapper: :inline, input_html: { class: 'input-mini'} %>
          </td>
          <td>
            <%= nf.link_to_remove t('destroy'), class: 'btn btn-small btn-danger' %>
          </td>
        </tr>
      <% end -%>
    </tbody>
  </table>
  <p>
    <%= f.link_to_add '添加', :tool_suite_deliveries, data: { target: '#tool_suite_deliveries' }, class: 'btn btn-small btn-info' %>
  </p>

  <div class="form-actions">
    <%= f.button :submit, t('save'), class: 'btn btn-primary' %>
    <%= link_to t('cancel'), tool_deliveries_path, class: 'btn' %>
  </div>
<% end -%>
