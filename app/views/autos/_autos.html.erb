<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t(:car_number) %></th>
      <th><%= t(:auto_modelyear) %></th>
      <th><%= t(:vin) %></th>
      <th><%= t(:owner_users) %></th>
      <th><%= t(:created_at) %></th>
      <th><%=t 'actions' %></th>
    </tr>
  </thead>
  <tbody>
    <% @autos.each do |auto| %>
      <tr>
        <td><%= link_to auto.number, auto_path(auto) %></td>
        <td><%= link_to auto.auto_submodel.name, auto_submodel_path(auto.auto_submodel) if auto.auto_submodel %></td>
        <td><%= auto.vin %></td>
        <td>
          <ul>
          <% auto.users.each do |u| %>
            <li><%= link_to u.phone_num, user_path(u) %> </li>
          <% end %>
          </ul>
        </td>
        <td><%=l auto.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_auto_path(auto), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      auto_path(auto),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @autos %>