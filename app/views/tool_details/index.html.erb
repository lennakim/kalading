<div class="span9 offset2">
  <%= render 'tool_types/nav' %>

  <h3><%= ToolDetail.model_name.human %></h3>

  <div>
    <%= link_to t('new'), new_tool_detail_path, class: 'btn btn-success pull-right' if can? :create, ToolDetail %>

    <%= form_tag tool_details_path, class: 'form-inline', method: :get do %>
      <%= select_tag 'tool_type_id', options_from_collection_for_select(ToolType.all, 'id', 'identification', params[:tool_type_id]),
        prompt: ToolDetail.human_attribute_name('tool_type') %>
      <%= select_tag 'tool_brand_id', options_from_collection_for_select(ToolBrand.all, 'id', 'name', params[:tool_brand_id]),
        prompt: ToolDetail.human_attribute_name('tool_brand') %>
      <%= select_tag 'tool_supplier_id', options_from_collection_for_select(ToolSupplier.all, 'id', 'name', params[:tool_supplier_id]),
        prompt: ToolDetail.human_attribute_name('tool_supplier') %>

      <%= submit_tag t('search'), class: 'btn' %>
    <% end -%>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th class="span2">
          <%= ToolDetail.human_attribute_name('tool_type') %>
        </th>
        <th class="span2">
          <%= ToolDetail.human_attribute_name('tool_brand') %>
        </th>
        <th class="span4">
          <%= ToolDetail.human_attribute_name('tool_supplier') %>
        </th>
        <th><%= ToolDetail.human_attribute_name('lifetime') %></th>
        <th><%= ToolDetail.human_attribute_name('warranty_period') %></th>
        <th><%= ToolDetail.human_attribute_name('price') %></th>
        <th><%= t('actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @tool_details %>
    </tbody>
  </table>
  <%= paginate @tool_details %>
</div>
