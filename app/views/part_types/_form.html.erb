<%= simple_form_for @part_type, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, label: t('part_type_name') %>
  <%= f.input :unit, label: t('unit') %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                part_types_path, :class => 'btn' %>
  </div>
<% end %>
