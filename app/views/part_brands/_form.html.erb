<%= simple_form_for @part_brand, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, label: t(:part_brand_name) %>
  <%= f.input :sort_factor, input_html: {type: 'number', value: '1', step:'1', min: '-99999', max: '99999'}, label: t('sort_factor') %>
  <div class="form-actions">
    <%= f.button :submit, t(:submit), :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                part_brands_path, :class => 'btn' %>
  </div>
<% end %>
