<div class="container-fluid">
  <div class="row-fluid">
    <div class="span4 offset4 well">
      <h3><%= t(:login_welcome) %></h3>

      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :phone_num, label: t(:phone_num), :required => false, :autofocus => true, input_html: {class: 'input-block-level'} %>
          <%= f.input :password, label: t(:password), :required => false, input_html: {class: 'input-block-level'} %>
          <%= f.input :remember_me, :label => false, :inline_label => t(:remember_me), :as => :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t(:login), class: 'btn-block btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
