<h2><%= t(:edit_account) %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => user_registration_path(resource), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :phone_num, label: t(:phone_num), :required => true, :autofocus => true, input_html: {class: 'input-block-level'}, disabled: true %>
    <%= f.input :name, label: t(:name), :required => true, input_html: {class: 'input-block-level'} %>
    <%= f.input :email, :required => false, input_html: {class: 'input-block-level'} %>
    <%= f.input :password, label: t(:password), :autocomplete => "off", :hint => t(:leave_it_blank), :required => false, input_html: {class: 'input-block-level'} %>
    <%= f.input :password_confirmation, label: t(:password_confirmation), :required => false, input_html: {class: 'input-block-level'} %>
    <%= f.input :current_password, label: t(:current_password), :hint => t(:need_current_password), :required => true, input_html: {class: 'input-block-level'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(:save), class: 'btn-block btn-primary' %>
  </div>
<% end %>