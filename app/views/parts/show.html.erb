<%- model_class = Part -%>
<div class="page-header">
  <h1><%=t 'part' %></h1>
</div>

<h5><%= t('common_info') %></h5>

<dl class="dl-horizontal">
  <dt><strong><%= t 'manuf_number' %>:</strong></dt>
  <dd><%= @part.number %></dd>
</dl>

<h5><%= t('urls') %></h5>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t 'name' %></th>
      <th><%= t 'url' %></th>
    </tr>
  </thead>
  <tbody>
    <% @part.urlinfos.each do |url| %>
    <tr>
      <td><%=  url.name %></td>
      <td><%= link_to url.url, url.url %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h5><%= t('applicable_auto_submodels') %></h5>
<%= render 'auto_submodels/auto_submodels' %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              parts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_part_path(@part), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              part_path(@part),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
