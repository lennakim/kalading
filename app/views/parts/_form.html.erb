<%= simple_nested_form_for @part, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :part_brand, collection: PartBrand.all, prompt: t('choose_part_brand'), label: t('part_brand') %>
  <%= f.association :part_type, collection: PartType.all, prompt: t('choose_part_type'), label: t('part_type') %>
  <%= f.input :number, label: t('manuf_number') %>
  <%= f.input :price, label: t('price') %>
  <%= f.input :capacity, label: t('capacity_all') %>
  <%= f.input :spec, label: t('spec') %>
  <%= f.fields_for :urlinfos do |sf| %>
    <%= sf.input :name, label: t('urlname')%>
    <%= sf.input :url, label: t('url')%>
    <%= sf.input :price, label: t('price')%>
    <%= sf.link_to_remove t('remove_url') %>
  <% end %>
  <p><%= f.link_to_add t('add_url'), :urlinfos %></p>
  <div class="form-actions">
    <%= f.button :submit, t('save'), :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                parts_path, :class => 'btn' %>
  </div>
<% end %>
