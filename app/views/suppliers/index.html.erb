<%- model_class = Supplier -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t(:supplier_name) %></th>
      <th><%= t(:address) %></th>
      <th><%= t(:phone_num) %></th>
      <th><%=t 'actions' %></th>
    </tr>
  </thead>
  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.address %></td>
        <td><%= supplier.phone_num %></td>
        <td>
          <%= link_to t('edit'),
                      edit_supplier_path(supplier), :class => 'btn btn-mini' if can? :update, supplier %>
          <%= link_to t('destroy'),
                      supplier_path(supplier),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' if can? :destroy, supplier %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('new_supplier'),
            new_supplier_path,
            :class => 'btn btn-primary' if can? :create, Supplier %>
