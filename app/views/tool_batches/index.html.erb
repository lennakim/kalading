<div class="span9 offset2">
  <%= render 'tool_types/nav' %>

  <div class="pull-right">
    <%= link_to new_tool_batch_path, class: 'btn btn-success' do %>
      <i class="icon-plus-sign"></i>
      <%= t('views.modules.tool_management.tool_batch_in_btn') %>
    <% end -%>
  </div>
  <div class="clearfix"></div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('mongoid.attributes.tool_batch.created_at') %></th>
        <th><%= t('mongoid.attributes.tool_batch.city') %></th>
        <th><%= t('mongoid.attributes.tool_batch.tool_type') %></th>
        <th><%= t('mongoid.attributes.tool_batch.quantity') %></th>
        <th><%= t('mongoid.attributes.tool_batch.spec') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @tool_batches %>
    </tbody>
  </table>
</div>
