<div class="span9 offset2">
  <%= render 'tool_types/nav' %>

  <div>
    <%= render 'tool_batches/new_btn' %>

    <%= form_tag tool_batches_path, class: 'form-inline', method: :get do %>
      <div class="control-group">
        <%= ToolBatch.human_attribute_name('created_at') %>:

        <%= t('from') %>
        <div class="form-inline input-append form_datetime">
          <input data-format="yyyy-MM-dd" type="text" name="date_from" value="<%= params[:date_from] %>" />
          <span class="add-on">
            <i data-time-icon="icon-time" data-date-icon="icon-calendar">
            </i>
          </span>
        </div>

        <%= t('to') %>
        <div class="form-inline input-append form_datetime">
          <input data-format="yyyy-MM-dd" type="text" name="date_to" value="<%= params[:date_to] %>" />
          <span class="add-on">
            <i data-time-icon="icon-time" data-date-icon="icon-calendar">
            </i>
          </span>
        </div>
      </div>

      <%= select_tag 'city_id', options_from_collection_for_select(City.all, 'id', 'name', params[:city_id]), prompt: t('national') %>
      <%= select_tag 'category', options_for_select(tool_type_category_collection, params[:category]),
        prompt: t('views.modules.tool_management.all_categories') %>

      <%= submit_tag t('search'), class: 'btn' %>
    <% end -%>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('mongoid.attributes.tool_batch.created_at') %></th>
        <th><%= t('mongoid.attributes.tool_batch.city') %></th>
        <th><%= t('mongoid.attributes.tool_batch.tool_type') %></th>
        <th><%= t('mongoid.attributes.tool_batch.tool_type_category') %></th>
        <th><%= t('mongoid.attributes.tool_batch.quantity') %></th>
        <th><%= t('mongoid.attributes.tool_batch.spec') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @tool_batches %>
    </tbody>
  </table>
  <%= paginate @tool_batches %>
</div>
