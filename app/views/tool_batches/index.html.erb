<div class="span9 offset2">
  <%= render 'tool_types/nav' %>

  <div>
    <%= render 'tool_batches/new_btn' %>

    <%= form_tag tool_batches_path, class: 'form-inline', method: :get do %>
      <div class="control-group">
        <%= ToolBatch.human_attribute_name('created_at') %>:

        <%= t('from') %>
        <div class="form-inline input-append form_datetime">
          <input data-format="yyyy-MM-dd" type="text" name="date_from" value="<%= params[:date_from] %>" />
          <span class="add-on">
            <i data-time-icon="icon-time" data-date-icon="icon-calendar">
            </i>
          </span>
        </div>

        <%= t('to') %>
        <div class="form-inline input-append form_datetime">
          <input data-format="yyyy-MM-dd" type="text" name="date_to" value="<%= params[:date_to] %>" />
          <span class="add-on">
            <i data-time-icon="icon-time" data-date-icon="icon-calendar">
            </i>
          </span>
        </div>
      </div>

      <%= select_tag 'tool_type_id', options_from_collection_for_select(ToolType.all, 'id', 'identification', params[:tool_type_id]),
        prompt: ToolBatch.human_attribute_name('tool_type') %>
      <%= select_tag 'tool_brand_id', options_from_collection_for_select(ToolBrand.all, 'id', 'name', params[:tool_brand_id]),
        prompt: ToolBatch.human_attribute_name('tool_brand') %>
      <%= select_tag 'tool_supplier_id', options_from_collection_for_select(ToolSupplier.all, 'id', 'name', params[:tool_supplier_id]),
        prompt: ToolBatch.human_attribute_name('tool_supplier') %>

      <%= submit_tag t('search'), class: 'btn' %>
    <% end -%>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= ToolBatch.human_attribute_name('created_at') %></th>
        <th><%= ToolBatch.human_attribute_name('tool_type') %></th>
        <th><%= ToolBatch.human_attribute_name('tool_brand') %></th>
        <th class="span4">
          <%= ToolBatch.human_attribute_name('tool_supplier') %>
        </th>
        <th><%= ToolBatch.human_attribute_name('price') %></th>
        <th><%= ToolBatch.human_attribute_name('quantity') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @tool_batches %>
    </tbody>
  </table>
  <%= paginate @tool_batches %>
</div>
