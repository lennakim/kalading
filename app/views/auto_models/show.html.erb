<%- model_class = AutoModel -%>
<div class="page-header">
  <h1><%= @auto_model.name %></h1>
</div>

<h3><%= t 'auto_submodel_list' %></h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t(:name) %></th>
    </tr>
  </thead>
  <tbody>
    <% @auto_model.auto_submodels.each do |auto_submodel| %>
      <tr>
        <td><%= link_to auto_submodel.full_name, auto_submodel_path(auto_submodel) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t('back'),  auto_models_path, :class => 'btn'  %>
  <%= link_to t('edit'), edit_auto_model_path(@auto_model), :class => 'btn', :target => '_blank' if can? :update, @auto_model %>
</div>
