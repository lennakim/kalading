<div class="span10 offset1">
  <%= render 'tool_types/nav' %>

  <div>
    <%= form_tag tool_statistics_path, class: 'form-inline', method: :get do %>
      <% if !current_user.storehouse_admin? -%>
        <%= select_tag 'city_id', options_from_collection_for_select(City.all, 'id', 'name', params[:city_id]),
          prompt: Tool.human_attribute_name('city') %>
      <% end -%>
      <%= select_tag 'tool_type_id', options_from_collection_for_select(ToolType.all, 'id', 'name', params[:tool_type_id]),
        prompt: Tool.human_attribute_name('tool_type') %>

      <%= submit_tag t('search'), class: 'btn' %>
    <% end -%>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= Tool.human_attribute_name('city') %></th>
        <th><%= Tool.human_attribute_name('tool_type') %></th>
        <td><%= Tool.human_attribute_name('tool_brand') %></td>
        <th><%= Tool.human_attribute_name('assigned_count') %></th>
        <th><%= Tool.human_attribute_name('delivering_count') %></th>
        <th><%= Tool.human_attribute_name('stock_count') %></th>
        <th><%= Tool.human_attribute_name('total') %></th>
      </tr>
    </thead>
    <tbody>
      <% Array.wrap(@result).each do |item| %>
        <tr>
          <td><%= link_to item.city.name, tool_statistics_path(city_id: item.city.id) %></td>
          <td><%= item.tool_type.identification %></td>

          <% if @show_tool_brand -%>
            <td><%= item.tool_brand.name %></td>
          <% else -%>
            <td><%= link_to '查看', tool_statistics_path(city_id: item.city.id, tool_type_id: item.tool_type.id) %></td>
          <% end -%>

          <td><%= item.assigned %></td>
          <td><%= item.delivering %></td>
          <td><%= item.stock %></td>
          <td><%= item.total %></td>
        </tr>
      <% end -%>
    </tbody>
  </table>
</div>
