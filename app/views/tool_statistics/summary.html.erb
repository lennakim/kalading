<div class="span10 offset1">
  <%= render 'tool_types/nav' %>

  <h3>汇总信息</h3>

  <table class="table table-striped table-bordered table-hover text-center">
    <thead>
      <tr>
        <th></th>
        <th colspan="2" class="span4">随人</th>
        <th colspan="2" class="span4">随车</th>
      </tr>
      <tr>
        <th>城市</th>
        <th>正在使用</th>
        <th>库房留存</th>
        <th>正在使用</th>
        <th>库房留存</th>
      </tr>
    </thead>
    <tbody>
      <% @result.each do |item| -%>
        <tr>
          <td><%= item.city.name %></td>
          <td><%= item.with_engineer_assigned %></td>
          <td><%= item.with_engineer_stock %></td>
          <td><%= item.with_vehicle_assigned %></td>
          <td><%= item.with_vehicle_stock %></td>
        </tr>
      <% end -%>
      <tr>
        <td>合计</td>
        <td><%= @total['with_engineer_assigned'] %></td>
        <td><%= @total['with_engineer_stock'] %></td>
        <td><%= @total['with_vehicle_assigned'] %></td>
        <td><%= @total['with_vehicle_stock'] %></td>
      </tr>
      <tr>
        <td>发货备注</td>
        <td colspan="2">
          <%= display_delivery_statistics(@delivery_result, 'with_engineer') %>
        </td>
        <td colspan="2">
          <%= display_delivery_statistics(@delivery_result, 'with_vehicle') %>
        </td>
      </tr>
      <tr>
        <td>总计</td>
        <td colspan="2"><%= @total['with_engineer'] %></td>
        <td colspan="2"><%= @total['with_vehicle'] %></td>
      </tr>
    </tbody>
  </table>
</div>
