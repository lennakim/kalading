<% if current_user %>
<div class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#">Kalading</a>
      <div class="container-fluid nav-collapse">
        <ul class="nav">
          <% if ['storehouses', 'parts', 'part_types', 'part_brands', 'suppliers', 'partbatches'].include? params[:controller] %>
          <li class="active">
          <% else %>
          <li>
          <% end %>
          <%= link_to t('repository_menu'), storehouses_path if can? :read, Storehouse %>
          </li>

          <% if ['auto_submodels', 'autos', 'auto_brands', 'auto_models'].include? params[:controller] %>
          <li class="active">
          <% else %>
          <li>
          <% end %>
          <%= link_to t('auto_menu'), auto_submodels_path if can? :read, AutoSubmodel %>
          </li>

          <% if ['orders'].include? params[:controller] %>
          <li class="active">
          <% else %>
          <li>
          <% end %>
            <div class="btn-group">
              <button class="btn btn-inverse" ><%= link_to t('order_menu'), orders_path %></button>
              <button class="btn btn-inverse dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li><%= link_to t('order_stats'), order_stats_path if can? :order_stats, Order %></li>
              </ul>
          </div>
          </li>
          
          <% if ['complaints'].include? params[:controller] %>
          <li class="active">
          <% else %>
          <li>
          <% end %>
          <%= link_to t('complaint_menu'), complaints_path if can? :read, Complaint %>
          </li>

          <% if ['cities'].include? params[:controller] %>
          <li class="active">
          <% else %>
          <li>
          <% end %>
          <%= link_to t('cities'), cities_path if can? :read, City %>
          </li>

          <% if ['users'].include? params[:controller] %>
          <li class="active">
          <% else %>
          <li>
          <% end %>
          <%= link_to t('employees_menu'), users_path if can? :access, :rails_admin %>
          </li>
          
          <% if ['service_types'].include? params[:controller] %>
          <li class="active">
          <% else %>
          <li>
          <% end %>
          <%= link_to t('service_types'), service_types_path if can? :read, ServiceType %>
          </li>
          <% if ['discounts'].include? params[:controller] %>
          <li class="active">
          <% else %>
          <li>
          <% end %>
          <%= link_to t('discount_card'), discounts_path if can? :read, Discount %>
          </li>
          <% if ['videos'].include? params[:controller] %>
          <li class="active">
          <% else %>
          <li>
          <% end %>
          <%= link_to t('videos'), videos_path if can? :view, Video %>
          </li>
          <li><%= link_to t(:jishiapp_download) + ' V1.' + (s = Rails.root.join('public', 'system', 'kaladingapp.apk.version'); File.exists?(s) ? File.open(s, 'r').gets : '?' ), '/system/kaladingapp.apk' %></li>
        </ul>
        <%= link_to t('log_out'), destroy_user_session_path, :method => :delete, :class => 'btn btn-info btn-small pull-right' if current_user %>
        <%= link_to t(:edit_account), edit_user_registration_path, :class => 'btn btn-info btn-small pull-right' if current_user %>
        <%= link_to t(:welcome_user, n: current_user.role_str + ' ' + current_user.name ), orders_path, :class => 'btn btn-inverse btn-link active btn-small pull-right' if current_user %>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>
<% end %>