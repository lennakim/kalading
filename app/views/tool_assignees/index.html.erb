<div class="span9 offset2">
  <%= render 'tool_types/nav' %>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('mongoid.attributes.tool_assignee.city') %></th>

        <% if params[:type] == 'engineer' -%>
        <th><%= t('mongoid.attributes.tool_assignee.engineer') %></th>
        <% end -%>
        <% if params[:type] == 'vehicle' -%>
        <th><%= t('mongoid.attributes.tool_assignee.service_vehicle') %></th>
        <% end -%>

        <th><%= t('mongoid.attributes.tool_assignee.assigned_count') %></th>
        <th><%= t('mongoid.attributes.tool_assignee.to_be_assigned_tools_count') %></th>
        <th><%= t('mongoid.attributes.tool_assignee.discarded_count') %></th>
        <th><%= t('actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'assignee', collection: @assignees, as: :assignee %>
    </tbody>
  </table>
  <%= paginate @assignees %>
</div>
