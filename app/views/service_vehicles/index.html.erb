<div class="span9 offset2">
  <%= render 'tool_types/nav' %>

  <div>
    <%= link_to t('new'), new_service_vehicle_path, class: 'btn btn-success pull-right' if can? :create, ServiceVehicle %>

    <%= form_tag service_vehicles_path, class: 'form-inline', method: :get do %>
      <%= select_tag 'city_id', options_from_collection_for_select(City.all, 'id', 'name', params[:city_id]), prompt: t('national') %>
      <%= submit_tag t('search'), class: 'btn' %>
    <% end -%>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('mongoid.attributes.service_vehicle.number') %></th>
        <th><%= t('mongoid.attributes.service_vehicle.city') %></th>
        <th><%= t('actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @service_vehicles %>
    </tbody>
  </table>
  <%= paginate @service_vehicles %>
</div>
