<div class="span10 offset1">
  <%= render 'tool_types/nav' %>

  <h3><%= ServiceVehicle.model_name.human %></h3>

  <div>
    <%= link_to t('new'), new_service_vehicle_path, class: 'btn btn-success pull-right' if can? :create, ServiceVehicle %>

    <%= form_tag service_vehicles_path, class: 'form-inline', method: :get do %>
      <%= ServiceVehicle.human_attribute_name('number') %>
      <%= text_field_tag :number, params[:number], class: 'input-small' %>

      <%= select_tag 'city_id', options_from_collection_for_select(City.all, 'id', 'name', params[:city_id]), prompt: t('national') %>
      <%= submit_tag t('search'), class: 'btn' %>
    <% end -%>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= ServiceVehicle.human_attribute_name('number') %></th>
        <th><%= ServiceVehicle.human_attribute_name('city') %></th>
        <th><%= t('actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @service_vehicles %>
    </tbody>
  </table>
  <%= paginate @service_vehicles %>
</div>
