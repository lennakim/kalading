<div class="span9 offset2">
  <%= render 'tool_types/nav' %>

  <div class="pull-right">
    <%= link_to t('new'), new_service_vehicle_path, class: 'btn btn-success' if can? :create, ServiceVehicle %>
  </div>
  <div class="clearfix"></div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('mongoid.attributes.service_vehicle.number') %></th>
        <th><%= t('mongoid.attributes.service_vehicle.city') %></th>
        <th><%= t('actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @service_vehicles %>
    </tbody>
  </table>
</div>
