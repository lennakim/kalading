<div class="span10 offset1">
  <%= render 'tool_types/nav' %>

  <div class="page-header">
    <h1>工具分配历史记录</h1>
  </div>

  <p>
    <%= @assignee.city.name %>
    <%= @assignee.model_name.human %>: <%= @assignee.name %>
  </p>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= ToolAssignment.human_attribute_name('created_at') %></th>
        <th><%= ToolAssignment.human_attribute_name('assigner') %></th>
        <th><%= ToolAssignment.human_attribute_name('tool_type') %></th>
        <th><%= ToolAssignment.human_attribute_name('tool_brand') %></th>
        <th><%= Tool.human_attribute_name('tool_number') %></th>
        <th><%= ToolAssignment.human_attribute_name('status') %></th>
        <th><%= ToolAssignment.human_attribute_name('applied_at') %></th>
        <th><%= ToolAssignment.human_attribute_name('applicant') %></th>
        <th><%= ToolAssignment.human_attribute_name('approved_at') %></th>
        <th><%= ToolAssignment.human_attribute_name('approver') %></th>
      </tr>
    </thead>
    <tbody>
      <% @tool_assignments.each do |assign| %>
        <tr>
          <td><%= l assign.created_at %></td>
          <td><%= assign.assigner.name %></td>
          <td><%= assign.tool_type.identification %></td>
          <td><%= assign.tool_brand.name %></td>
          <td><%= assign.tool.tool_number %></td>
          <td><%= translate_collection_options(assign, :status) %></td>
          <td><%= l assign.applied_at if assign.applied_at %></td>
          <td><%= assign.applicant.try(:name) %></td>
          <td><%= l assign.approved_at if assign.approved_at %></td>
          <td><%= assign.approver.try(:name) %></td>
        </tr>
      <% end -%>
    </tbody>
  </table>
  <%= paginate @tool_assignments %>
</div>
