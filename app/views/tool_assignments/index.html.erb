<div class="span9 offset2">
  <%= render 'tool_types/nav' %>

  <div>
    <%= form_tag tool_assignments_path, class: 'form-inline', method: :get do %>
      <%= hidden_field_tag 'status', 'discarded' %>
      <%= select_tag 'city_id', options_from_collection_for_select(City.all, 'id', 'name', params[:city_id]), prompt: t('national') %>
      <%= select_tag 'category', options_for_select(tool_type_category_collection, params[:category]),
        prompt: t('views.modules.tool_management.all_categories') %>
      <%= select_tag 'discarded_type', options_for_select(tool_assignment_discarded_type_collection, params[:discarded_type]),
        prompt: ToolAssignment.human_attribute_name('discarded_type') %>

      <%= submit_tag t('search'), class: 'btn' %>
    <% end -%>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('mongoid.attributes.tool_assignment.city') %></th>
        <th><%= t('mongoid.attributes.tool_assignment.tool_type') %></th>
        <th><%= t('mongoid.attributes.tool_assignment.tool_type_category') %></th>
        <th><%= t('mongoid.attributes.tool_assignment.assignee') %></th>
        <th><%= t('mongoid.attributes.tool_assignment.applicant') %></th>
        <th><%= t('mongoid.attributes.tool_assignment.discarded_type') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'tool_assignment', collection: @assignments, as: :assignment %>
    </tbody>
  </table>
  <%= paginate @assignments %>
</div>
