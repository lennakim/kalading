<div class="span9 offset2">
  <%= render 'tool_types/nav' %>

  <div>
    <%= form_tag tool_assignments_path, class: 'form-inline', method: :get do %>
      <% if !current_user.storehouse_admin? -%>
        <%= select_tag 'city_id', options_from_collection_for_select(City.all, 'id', 'name', params[:city_id]), prompt: t('national') %>
      <% end -%>

      <%= submit_tag t('search'), class: 'btn' %>
    <% end -%>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= ToolAssignment.human_attribute_name('city') %></th>
        <th><%= ToolAssignment.human_attribute_name('tool_type') %></th>
        <th><%= ToolAssignment.human_attribute_name('tool_brand') %></th>
        <th><%= Tool.human_attribute_name('tool_number') %></th>
        <th><%= ToolAssignment.human_attribute_name('assignee') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'tool_assignment', collection: @assignments, as: :assignment %>
    </tbody>
  </table>
  <%= paginate @assignments %>
</div>
