<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="modal-label"><%= t(:order_prompt) %></h3>
</div>

<div class="modal-body">
  <ul>
    <% if params[:state].to_i == 0 && @orders.count != 0 %>
    <li><%= link_to t(:new_orders_prompt, n: @orders.count), orders_path(state: 0) %></li>
    <% end %>
    <% if params[:state].to_i == 4 && params[:part_deliver_state].to_i == 0 && @orders.count != 0 %>
    <li><%= link_to t(:not_delivered_orders_prompt, n: @orders.count), orders_path(state: 4, part_deliver_state: 0) %></li>
    <% end %>
  </ul>
</div>

<div class="modal-footer">
  <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true"><%= t('ok') %></button>
</div>
