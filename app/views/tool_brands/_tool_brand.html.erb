<tr>
  <td><%= tool_brand.name %></td>
  <td>
    <%= link_to t('edit'), edit_tool_brand_path(tool_brand),
      class: 'btn btn-small btn-primary' if can? :update, ToolBrand %>
    <%= link_to t('destroy'), tool_brand_path(tool_brand),
      method: 'delete', confirm: t('destroy_confirm'),
      class: 'btn btn-small btn-danger' if can? :destroy, ToolBrand %>
  </td>
</tr>
