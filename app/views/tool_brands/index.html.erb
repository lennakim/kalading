<div class="span9 offset2">
  <%= render 'tool_types/nav' %>

  <div>
    <%= link_to t('new'), new_tool_brand_path, class: 'btn btn-success pull-right' if can? :create, ToolBrand %>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= ToolBrand.human_attribute_name('name') %></th>
        <th><%= t('actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @tool_brands %>
    </tbody>
  </table>
</div>
